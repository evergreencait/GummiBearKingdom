@{
    ViewData["Title"] = "Gummi Bear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<GummiBear.Models.Bear>

<html>
<head>
    <title>Kingdom</title>
</head>
<body>
    <div class="bearindex"><h2>Products: Gummi Bears</h2>
<ul>
